%p Account Type: #{account.category}

= tabs do
  - account.items_by_year.each do |year, items|
    = tab(year.to_s) do
      %p= render_datatable AccountYearDatatable.new(account_id: account.id, year: year), simple: true
  = tab 'Items' do
    %p= render_datatable AccountItemsDatatable.new(account_id: account.id)
  = tab 'Imports' do
    %p= render_datatable AccountImportsDatatable.new(account_id: account.id)
